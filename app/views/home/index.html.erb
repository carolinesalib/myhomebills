<div class="col-md-2"></div>
<div class="col-md-8">
	<nav class="navbar navbar-default">
		<div class="container-fluid">
		<a href="<%=new_group_path%>" class="btn btn-link">New group</a>
		<a href="<%=new_subgroup_path%>" class="btn btn-link">New subgroup</a>

		<ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">2017 - Jan <span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
          <li><a href="#">2017 - Jan</a></li>
          <li><a href="#">2017 - Fev</a></li>
        </ul>
      </li>
    </ul>
    </div>
	</nav>

	<% @groups.each do |group| %>
	<div class="panel panel-default">
	  <div class="panel-body"><%= group.name %></div>
	  <div class="panel-footer">
			<table class="table table-striped table-hover ">
			  <thead>
			    <tr>
			      <th> Subgroup	</th>
			      <th> Value </th>
			    </tr>
			  </thead>
			  <tbody>
			  	<% group.subgroups.each do |subgroup| %>
			    <tr>
			      <td><a href="<%=subgroup_path(subgroup.id)%>"><%= subgroup.name %></a></td>
			      <td><%= subgroup.total_builds %></td>
			    </tr>
			    <% end %>
			  </tbody>
			</table>
			Total: <%= group.total_builds %>
	  </div>
	</div>
	<% end %>
</div>
<div class="col-md-2"></div>
