<div class="col-md-2"></div>
<div class="col-md-8">
<div class="well bs-component">
<%= form_for @subgroup, html: {class: "form-horizontal"} do |f| %>
  <fieldset>
    <legend><%=t('new_subgroup')%></legend>
    <div class="form-group">
      <label for="name" class="col-lg-2 control-label"><%=t('name')%></label>
      <div class="col-lg-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label for="description" class="col-lg-2 control-label"><%=t('description')%></label>
      <div class="col-lg-10">
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label for="group_id" class="col-lg-2 control-label"><%=t('groups')%></label>
      <div class="col-lg-10">
		<%= f.collection_select(:group_id, @groups, :id, :name, {},{class: "form-control"}) %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= link_to t('cancel'), root_path, class: "btn btn-default" %>
        <%= f.submit t('save'), class: "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>
</div>
</div>
<div class="col-md-2"></div>